<% provide(:title, 'Videos') %>
<div class="page-header"><h1>Upload & download the videos.</h1></div>
<div class="row">
  <div class="col-md-4">
    <div class="panel panel-success">
      <div class="panel-heading">Upload a video</div>

      <div class="panel-body">
        <%= form_for(@video, url:video_path, multipart: true) do |f| %>
          <div class="form-group">
            <%= f.text_field :title, placeholder: 'Video title', class: 'form-control', :required => true %>
          </div>
          <div class="form-group">
            <%= f.file_field :video, class: 'form-control', accept: 'video/*', :required => true %>
          </div>
          <div class="form-group">
            <%= f.submit 'Upload', class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-md-8">
    <div class="panel panel-primary">
        <div class="panel-heading">Videos</div>

        <div class="panel-body">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Video title</th>
                <th>Size</th>
                <th>Download</th>
              </tr>
            </thead>
            <tbody>
              <% @videos.each do |video| %>
                <tr>
                  <td><%= video.title %></td>
                  <td><%= (video.video.size / 1024.0 /1024.0).round(2) %> MB</td>
                  <td><a href=<%=video.video.url(:original, false)%> download> Download </a></td>
                </tr>
              <% end %>
            </tbody>
          </table>

        </div>
    </div>
  </div>
</div>


